unit Controllers.Cliente;

interface

uses
  Models.Cliente,
  System.Generics.Collections,
  System.SysUtils;

type
  TControllerCliente = class
  public
    function ObterCliente(const pId: string): TCliente;
    function ObterClientes(): TObjectList<TCliente>;

  end;

implementation

{ TControllerCliente }



function TControllerCliente.ObterCliente(const pId: string): TCliente;
begin
  Result := TCliente.Create('wallace', StrToDate('11/09/1989'), '12345678999');
end;

function TControllerCliente.ObterClientes: TObjectList<TCliente>;
var
  lCliente: TCliente;
begin
  Result := TObjectList<TCliente>.Create();

  lCliente := TCliente.Create('wallace', StrToDate('11/09/1989'), '12345678999');
  Result.Add(lCliente);
  //lCliente.Free();

  lCliente := TCliente.Create('ferreira', StrToDate('12/09/2019'), '12345678999');
  Result.Add(lCliente);
  //lCliente.Free();
end;

end.
